<% layout('layouts/boilerplate') %> 
<h1>Register</h1>

<form class="validated-form" action="/register" method="POST" novalidate>
    <div class="my-3">
        <label class="form-label" for="username">Username: </label>
        <input class="form-control" type="text" name="username" id="username" placeholder="Required" required>
    </div>
    <div class="my-3">
        <label class="form-label" for="email">Email: </label>
        <input class="form-control" type="email" name="email" id="email" placeholder="xxx@example.com" required>
        <div class="valid-feedback">
            Valid
        </div>
    </div>
    <div class="my-3">
        <label class="form-label" for="password">Password: </label>
        <input class="form-control" type="password" name="password" id="password" required>
    </div>
    <button class="btn btn-primary">
        Register
    </button>
</form>