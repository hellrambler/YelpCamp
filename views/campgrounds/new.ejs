<% layout("layouts/boilerplate.ejs") %>

<div class="row">
    <h1 class="text-center mb-3">Create a Campground</h1>
    <div class="col-md-6 offset-md-3">
        
        <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Campground Title: </label>
                <input class="form-control" type="text" name="campground[title]" id="title" placeholder="campground name" required>
            </div>

            <div class="mb-3">
                <label class="form-label" for="location">Campground Location: </label>
                <input class="form-control" type="text" name="campground[location]" id="location" placeholder="campground location" required>
            </div>
            <!-- <div class="mb-3">
                <label class="form-label" for="image">Campground Image Url: </label>
                <input class="form-control" type="text" name="campground[image]" id="image" placeholder="campground image" required>
            </div> -->
            
            <!-- <input type="file" name="image" id="image" multiple> -->
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price: </label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" id="price" name="campground[price]" required>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Campground Description: </label>
                <textarea class="form-control" type="text" name="campground[description]" id="description" placeholder="campground description" required></textarea>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Add Images:</label>
                <input class="form-control" type="file" id="image" multiple name="image">
            </div>
            <div class="d-flex justify-content-between align-items-center mb-3">
                <a href="/campgrounds" class="btn btn-warning ">Cancel</a>
                <button class="btn btn-success float-end">Add Campground</button>
            </div>
        </form>
        
    </div>
</div>


